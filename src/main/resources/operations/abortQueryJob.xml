<template xmlns="http://ws.apache.org/ns/synapse" name="abortQueryJob">
    <parameter name="queryJobId" description="Query Job ID"/>
    <sequence>
        <property name="queryJobId" expression="$func:queryJobId" />
        <class name="org.wso2.carbon.esb.connector.operations.AbortQueryJob" />
        <property name="uri.var.url" expression="get-property('abortQueryJobUrl')" />
        <property name="uri.var.accessToken" expression="get-property('accessToken')" />
        <filter source="boolean(get-property('renewedAccessToken'))" regex="true">
            <then>
                <property name="uri.var.accessToken" expression="get-property('renewedAccessToken')" />
            </then>
            <else/>
        </filter>
        <header name="Authorization"
                expression="fn:concat('Bearer ', $ctx:uri.var.accessToken )"
                scope="transport"/>
        <payloadFactory media-type="json">
            <format>
                <![CDATA[{ "state" : "Aborted" }]]>
            </format>
            <args/>
        </payloadFactory>
        <call>
            <endpoint>
                <http method="patch" uri-template="{uri.var.url}">
                    <timeout>
                        <duration>60000</duration>
                        <responseAction>fault</responseAction>
                    </timeout>
                    <suspendOnFailure>
                        <initialDuration>2000</initialDuration>
                        <progressionFactor>1.0</progressionFactor>
                        <maximumDuration>3000</maximumDuration>
                    </suspendOnFailure>
                </http>
            </endpoint>
        </call>
        <property expression="$axis2:HTTP_SC" name="httpCode" scope="default" type="STRING"/>
        <filter regex="4[0-9][0-9]" source="$ctx:httpCode">
            <then>
                <class name="org.wso2.carbon.esb.connector.operations.RenewAccessToken" />
                <property name="uri.var.newAccessToken" expression="get-property('accessToken')" />
                <header name="Authorization"
                        expression="fn:concat('Bearer ', $ctx:uri.var.newAccessToken )"
                        scope="transport"/>
                <payloadFactory media-type="json">
                    <format>
                        <![CDATA[{ "state" : "Aborted" }]]>
                    </format>
                    <args/>
                </payloadFactory>
                <call>
                    <endpoint>
                        <http method="patch" uri-template="{uri.var.url}">
                            <timeout>
                                <duration>60000</duration>
                                <responseAction>fault</responseAction>
                            </timeout>
                            <suspendOnFailure>
                                <initialDuration>2000</initialDuration>
                                <progressionFactor>1.0</progressionFactor>
                                <maximumDuration>3000</maximumDuration>
                            </suspendOnFailure>
                        </http>
                    </endpoint>
                </call>
            </then>
            <else/>
        </filter>
    </sequence>
</template>
